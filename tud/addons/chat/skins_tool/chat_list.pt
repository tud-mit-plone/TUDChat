table#chat_list thead tr th{
                border: 1px solid #AAA;
                border-right:0;
                padding:5px 15px 5px 5px;
                margin:0;
   }
            table#chat_list thead tr th:nth-child(2n){
                border-right:2px solid #AAA;
            }
            table#chat_list thead tr th:last-child{
                border-right:1px solid #AAA  !important;
            }
            table#chat_list tbody tr td{
                padding:5px;
                margin:0;
                border-left:1px solid #AAA;
                border-bottom:1px solid #AAA;
            }
            table#chat_list tbody tr td:nth-child(2n){
                border-right:2px solid #AAA;
            }
            table#chat_list tbody tr td:last-child{
                border-right:1px solid #AAA !important;
            }
</style>

<h1 tal:replace = "structure context/manage_page_header">
    Header
</h1>

<h2 tal:define  = "manage_tabs_message options/manage_tabs_message | nothing"
    tal:replace = "structure context/manage_tabs">
    Tabs
</h2>

<h3>Ãœbersicht aller im System angelegten TUDChats</h3>

<tal:block define="chat_list python:here.getChatList()">
  <table id="chat_list" tal:condition="python: len(chat_list)>0">
    <thead>
      <tr>
        <th>ID</th>
        <th>Pfad</th>
      </tr>
    </thead>
    <tbody>
      <tr tal:repeat="chat chat_list">
        <td tal:content="chat/id"></td>
        <td tal:content="chat/path"></td>
      </tr>
    </tbody>
  </table>
  <p tal:condition="python: len(chat_list)==0">Im System wurden keine TUDChats gefunden.</p>
</tal:block>

